<div class="container ">

<br>
<nav class="navbar navbar-light bg-light">
  <%= link_to "Add Flat", new_flat_path, class: "btn btn-primary navbar-brand"%>
</nav>
<br>
<br>

<h1 class="text-center">All our Flats(<%= @flats.length %>)</h1>

<div class="d-flex justify-content-around align-items-center ">
    <%@flats.each do|flat|%>
      <div class="card m-3" style="width: 18rem;">
        <img class="card-img-top" src="<%photo%>" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"><%=flat.name %></h5>
          <p><%= flat.address %></p>
          <div class="d-flex justify-content-around align-items-center">
          <p><%= flat.price_per_night %></p>
          <p><%= flat.number_of_guests %></p>
          </div>
          <%= link_to "More info", flat_path(flat),class:"btn btn-primary "%>
        </div>
      </div>
    <%end %>
</div>

</div>
